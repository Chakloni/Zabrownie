<Window x:Class="Zabrownie.UI.BookmarksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Bookmarks" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add Bookmark Section -->
        <GroupBox Grid.Row="0" Header="Add Bookmark" Padding="8" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" 
                           VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="NewBookmarkTitle" 
                         Padding="4" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="URL:" 
                           VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="NewBookmarkUrl" 
                         Padding="4" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Folder:" 
                           VerticalAlignment="Center" Margin="0,0,8,8"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="FolderComboBox" 
                          IsEditable="True" Padding="4" Margin="0,0,0,8"/>

                <Button Grid.Row="3" Grid.Column="1" Content="Add Bookmark" 
                        Width="120" HorizontalAlignment="Left" Click="AddBookmark_Click"/>
            </Grid>
        </GroupBox>

        <!-- Bookmarks List -->
        <GroupBox Grid.Row="1" Header="Bookmarks" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Filter by folder:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" x:Name="FilterFolderComboBox" 
                              SelectionChanged="FilterFolder_Changed"/>
                </Grid>

                <DataGrid Grid.Row="1" x:Name="BookmarksGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                        <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="3*"/>
                        <DataGridTextColumn Header="Folder" Binding="{Binding Folder}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit" Width="50" Margin="0,0,4,0" 
                                                Click="EditBookmark_Click" Tag="{Binding}"/>
                                        <Button Content="Delete" Width="50" 
                                                Click="DeleteBookmark_Click" Tag="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" Width="80" 
                HorizontalAlignment="Right" Margin="0,16,0,0" Click="Close_Click"/>
    </Grid>
</Window>