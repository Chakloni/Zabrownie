<Window x:Class="Zabrownie.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Zabrownie Browser" Height="800" Width="1200"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#C0C0C0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8,8,0,0" 
                            SnapsToDevicePixels="True">
                            
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F2F2F2"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                            </Trigger>

                            <!-- Active tab -->
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#B0B0B0"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Bar - TODA LA BARRA ES ARRASTRABLE (excepto donde digamos lo contrario) -->
<Border Grid.Row="0" 
        Background="#F5F5F5" 
        BorderBrush="#D0D0D0" 
        BorderThickness="0,0,0,1"
        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
        IsHitTestVisible="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Logo/Título - SÍ permite arrastrar -->
        <TextBlock Grid.Column="0" 
                   Text="Zabrownie" 
                   VerticalAlignment="Center" 
                   Margin="12,8,16,8" 
                   FontWeight="Bold" 
                   FontSize="14"
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

        <!-- Área de pestañas - NO permite arrastrar cuando haces clic en una pestaña o botón -->
        <Border Grid.Column="1" 
                Background="Transparent"
                MouseLeftButtonDown="StopDrag">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="TabsControl" ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource TabButtonStyle}" 
                                    Click="Tab_Click" 
                                    Tag="{Binding}"
                                    MouseLeftButtonDown="StopDrag">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Title}" 
                                               MaxWidth="150" 
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                                    <Button Grid.Column="1" 
                                            Content="x" 
                                            Width="16" 
                                            Height="Auto"
                                            FontSize="10" 
                                            Padding="0" 
                                            Click="CloseTab_Click" 
                                            Tag="{Binding}"
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            MouseLeftButtonDown="StopDrag"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Botón Nueva Pestaña - NO permite arrastrar -->
        <Button Grid.Column="2" 
                Content="+" 
                Width="30" 
                Height="Auto" 
                Margin="4" 
                Click="NewTab_Click" 
                FontWeight="Bold"
                MouseLeftButtonDown="StopDrag"/>

        <!-- Controles de ventana - NO permiten arrastrar -->
        <StackPanel Grid.Column="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    MouseLeftButtonDown="StopDrag">
            <Button Width="45" Content="—" Click="Minimize_Click"
                    Background="Transparent" BorderThickness="0"
                    MouseLeftButtonDown="StopDrag"/>
            <Button Width="45" Content="▢" Click="Maximize_Click"
                    Background="Transparent" BorderThickness="0"
                    MouseLeftButtonDown="StopDrag"/>
            <Button Width="45" Content="✕" Click="Close_Click"
                    Background="Transparent" BorderThickness="0"
                    Foreground="#D32F2F"
                    MouseLeftButtonDown="StopDrag"/>
        </StackPanel>
    </Grid>
</Border>

        <!-- Navigation Bar -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="◄" Width="40" Margin="0,0,4,0" 
                        Click="BackButton_Click" x:Name="BackButton" ToolTip="Atrás"/>
                <Button Grid.Column="1" Content="►" Width="40" Margin="0,0,4,0" 
                        Click="ForwardButton_Click" x:Name="ForwardButton" ToolTip="Adelante"/>
                <Button Grid.Column="2" Content="⟳" Width="40" Margin="0,0,8,0" 
                        Click="ReloadButton_Click" ToolTip="Recargar"/>
                
                <TextBox Grid.Column="3" x:Name="AddressBar" VerticalContentAlignment="Center" 
                         Padding="8,4" FontSize="14" KeyDown="AddressBar_KeyDown"
                         GotFocus="AddressBar_GotFocus"
                         Text="Escribe URL o busca..."/>
                
                <Button Grid.Column="4" Content="Ir" Width="60" Margin="8,0,8,0" 
                        Click="GoButton_Click"/>
                <Button Grid.Column="5" x:Name="BookmarkButton" Content="☆" Width="40" 
                        Margin="0,0,4,0" Click="BookmarkButton_Click" FontSize="18"
                        ToolTip="Marcar esta página"/>
                <Button Grid.Column="6" Content="⚙" Width="40" Click="SettingsButton_Click"
                        ToolTip="Configuración"/>
            </Grid>
        </Border>

        <!-- Bookmarks Bar (Optional) -->
        <Border Grid.Row="2" x:Name="BookmarksBar" Background="#FAFAFA" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                Padding="8,4" Visibility="Collapsed">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="BookmarksBarControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Title}" 
                                    Tag="{Binding Url}"
                                    Click="BookmarkBarItem_Click"
                                    Margin="0,0,4,0" 
                                    Padding="8,2"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    BorderBrush="#D0D0D0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- WebView Container -->
        <Grid Grid.Row="3" x:Name="WebViewContainer"/>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#E0E0E0" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="StatusText" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" x:Name="BlockedCountText" VerticalAlignment="Center" 
                           FontWeight="Bold" Foreground="#D32F2F" Margin="0,0,16,0"/>
                <Button Grid.Column="2" Content="Gestionar Marcadores" Click="ManageBookmarks_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>