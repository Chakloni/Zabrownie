<Window x:Class="Zabrownie.UI.CustomLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom Link" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{StaticResource BgPrimary}">
    
    <Border Background="{StaticResource BgSecondary}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="20"
                              Opacity="0.3"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Add Custom Quick Link"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Title:"
                       Grid.Row="1"
                       Foreground="{StaticResource TextSecondary}"
                       Margin="0,0,0,4"/>
            
            <!-- Make sure x:Name is set correctly -->
            <Border Grid.Row="2"
                    Background="{StaticResource BgTertiary}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,12">
                <TextBox x:Name="TitleTextBox"
                         Foreground="{StaticResource TextPrimary}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8"/>
            </Border>
            
            <TextBlock Text="URL:"
                       Grid.Row="3"
                       Foreground="{StaticResource TextSecondary}"
                       Margin="0,0,0,4"/>
            
            <!-- Make sure x:Name is set correctly -->
            <Border Grid.Row="4"
                    Background="{StaticResource BgTertiary}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,16">
                <TextBox x:Name="UrlTextBox"  
                         Foreground="{StaticResource TextPrimary}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8"
                         Text="https://"/>
            </Border>
            
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{StaticResource NavButtonStyle}"
                        Click="Cancel_Click"
                        Margin="0,0,8,0"/>
                <Button Content="Add"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="Add_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>